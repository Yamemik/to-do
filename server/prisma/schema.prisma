datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id       Int     @id @default(autoincrement()) // üîπ —á–∏—Å–ª–æ + –∞–≤—Ç–æ–∏–Ω–∫—Ä–µ–º–µ–Ω—Ç
  googleId String  @
  name     String
  email    String  @unique
  password String
  todos    Todo[]
}

model Todo {
  id        Int      @id @default(autoincrement()) // üîπ —á–∏—Å–ª–æ + –∞–≤—Ç–æ–∏–Ω–∫—Ä–µ–º–µ–Ω—Ç
  userId    Int
  title     String
  completed Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user User @relation(fields: [userId], references: [id])
}
